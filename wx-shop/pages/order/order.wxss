/* pages/order/order.wxss */
.order-head {
  display: flex;
  flex-direction: row;
  padding: 16rpx 0 32rpx 0;
}

.order-head-line {
  width: 21rpx;
  height: 34rpx;
}

.order-head-text {
  width: 150rpx;
  text-align: center;
  margin-left: 10rpx;
  font-size: 24rpx;
  line-height: 33rpx;
  color: rgba(52, 55, 61, 0.8);
  border-bottom: 1rpx solid #fff;
}

.order-block {
  margin: 0 26rpx 26rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 13rpx;
}

.order-card {
  display: flex;
  align-items: center;
  margin-left: 19rpx;
  margin-right: 23rpx;
  height: 200rpx;
}

.order-card:last-child {
  border-bottom: none;
}
.order-msg {
  padding-top:16rpx;
  margin-left: 19rpx;
  margin-right: 23rpx;
  height: 136rpx;
  border-bottom: 1px solid rgba(151, 151, 151, 0.2);
  font-size: 32rpx;
}

.order-msg:last-child {
  border-bottom: none;
}
.order-image {
  flex-shrink: 0;
  width: 160rpx;
  height: 160rpx;
  border-radius: 13rpx;
}

.order-info {
  flex: 1;
  padding: 27rpx;
  height: 100%;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 40rpx;
}

.order-name {
  color: rgba(29, 29, 38, 0.8);
}

.order-price {
  margin-top: 12rpx;
  font-weight: bold;
}

.order-opr {
  flex-shrink: 0;
  margin-left: 59rpx;
  padding-top: 34rpx;
  height: 100%;
  box-sizing: border-box;
  font-size: 28rpx;
}

.order-btn {
  width: 100rpx;
  height: 52rpx;
  line-height: 52rpx;
  background: #F5E069;
  border-radius: 8rpx;
  text-align: center;
}

.order-count {
  margin-top: 49rpx;
  line-height: 40rpx;
  font-weight: bold;
  text-align: right;
}

.order-empty {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 37rpx 27rpx;
  height: 431rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 13rpx;
}

.empty-image {
  margin-bottom: 29rpx;
  width: 90rpx;
  height: 90rpx;
  opacity: 0.4;
}

.empty-text {
  font-size: 28rpx;
  line-height: 40rpx;
  color: rgba(139, 139, 139, 0.8);
}
.order-title{
  padding-left: 32rpx;
  font-size: 26rpx;
  line-height: 80rpx;
  position: relative;
  border-bottom: 1rpx solid rgba(151, 151, 151, 0.2);
}
.order-status{
  font-size:24rpx;
  position: absolute;
  top: 0;
  right: 32rpx;
  color:red;
}
.right{
  width: 16rpx;
  height: 32rpx;
  position: relative;
  left:26rpx;
  top:6rpx;
}
.shop{
  width: 46rpx;
  height: 46rpx;
  position: relative;
  top:10rpx;
  margin-right:13rpx;
}
.price{
  float: right;
  width: 100%;
  height: 30rpx;
  text-align: right;
  padding-bottom: 26rpx;
}
.btn{
  float: right;
  margin-left:16rpx;
  height:60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  font-weight: 0;
  background: #fff;
  color: rgb(0,0,0,0.5);
  border-radius: 40rpx;
  border:2rpx solid rgb(151, 151, 151);
  padding:0 32rpx;
}
.btnLight{
  background: #F5E069;
  color: #000;
  border:1rpx solid #F5E069;
}
.tabList{
  width: 750rpx;
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
  color:#fff;
  margin-bottom: 16rpx;
}
.tab{
  position: relative;
  width: 150rpx;
  line-height: 80rpx;
  text-align: center;
}
.txtBigger{
  font-size: 32rpx;
}
.tab>.active{
  position: absolute;
  bottom: 10rpx;
  left: 27rpx;
  width: 96rpx;
  border-bottom: 4rpx solid #fff;
}